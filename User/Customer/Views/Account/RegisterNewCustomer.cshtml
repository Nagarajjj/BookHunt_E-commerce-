@model Customer.ViewModels.CustomerDetails



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegisterNewCustomer</title>
</head>
<body>

    <h2 style="text-align:center">Customer Registration Page</h2>
    <hr />
    <div style="text-align:center">
        @using (Html.BeginForm())
        {
            <div style="color:red; text-align:center">@Html.ValidationSummary()</div>
            <div class="row">
                Enter the Name:@Html.EditorFor((m) => m.CustomerName)
                <p style="color:red">@Html.ValidationMessageFor((m) => m.CustomerName)</p>
            </div>
            <div class="row; text-align:center">
                Enter the Phone no.:@Html.EditorFor((m) => m.CustomerPhNo)
                <p style="color:red">@Html.ValidationMessageFor((m) => m.CustomerPhNo)</p>
            </div>
            <div class="row; text-align:center">
                Enter the Email Address:@Html.EditorFor((m) => m.CustomerEmailId)
                <p style="color:red">@Html.ValidationMessageFor((m) => m.CustomerEmailId)</p>
            </div>
            <div class="row; text-align:center">
                Enter the Password:@Html.EditorFor((m) => m.CustomerPassword)
                <p style="color:red"> @Html.ValidationMessageFor((m) => m.CustomerPassword)</p>
            </div>
            <div class="row; text-align:center">
                Retype the Password:@Html.EditorFor((m) => m.ConfirmPassword)
                <p style="color:red"> @Html.ValidationMessageFor((m) => m.ConfirmPassword)</p>
                @*<p style="color:red"> @Html.Equals(m.CustomerPassword,)</p>*@
            </div>
            @*<spacer type="horizontal" width="100" height="100"></spacer>*@
            <p></p>
            <button style="text-align:center">Register</button>
        }
    </div>
</body>
</html>
