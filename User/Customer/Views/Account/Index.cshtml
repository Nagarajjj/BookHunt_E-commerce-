@model List<DataComponentLib.Models.BookTable>

@{
    ViewBag.Title = "AllBooks";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AllBooks</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @if (Request.IsAuthenticated)
        {
            <h1>Welcome User: <span>@Html.Encode(User.Identity.Name)</span></h1>
        }
        <h2 class="text-center">Books List</h2>
        @*@if()*@
        @foreach (var book in Model)
        {
            <div class="col-md-4" style="border: 2px solid black;">
                <div style="text-align:center;border-bottom:2px solid maroon">
                    <h3>@book.BookTitle</h3>
                </div>
                <div class="col-md-8">
                    <img src="@Url.Content(book.BookImage)" width="50px" height="50px" />
                </div>
                <div class="col-md-6" style="text-align:left">
                    <b>@book.BookAuthor</b>
                </div>
                <div class="col-md-8" style="padding:2px">
                    <b>@book.BookPrice</b>
                </div>
                <div>
                    @*<input type="button" name="AddToCart" value="Add To Cart" class="btn btn-primary" id="btnAddToCart" onclick="AddToCart(this)" />*@
                    @*<button class="btn btn-info right" CommandArgument='<%#Eval("ProductId")' CommandName="addToCart" id="AddToCartBtn"><span class="icon16 icomoon-icon-enter white"></span>@Html. Add To Cart</button>*@
                    @*<button CommandArgument='<%#Eval("BookId")' CommandName="addToCart">Add to Cart</button>*@
                    <input type="button" value="Create" onclick="location.href='@Url.Action("", "User")'" />
                </div>
            </div>
            <p></p>
        }
    </div>
</body>
</html>

